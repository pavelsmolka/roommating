<style>
    td, th {
        border: 1px solid #eeeeee;
        padding: 15px;
    }
    table {
        margin-bottom: 20px;
    }
</style>
<div>
    <table>
      <thead>
      <tr>
        <th>ID</th>
        <th>Name</th>
        <th>Description</th>
      </tr>
      </thead>
      <tbody>
          {{#each band in controller}}
              {{view App.ShowBandView contentBinding="band"}}
          {{/each}}
      </tbody>
    </table>
    {{#linkTo "bands.new" class="btn"}}<i class="icon-plus-sign"></i> New Band{{/linkTo}}
</div>
